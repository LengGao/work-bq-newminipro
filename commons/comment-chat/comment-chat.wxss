.form {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    z-index: 19990;
    background-color: #fff;
    border-top: 2rpx solid #eee;
}

.form-content {
    width: 100%;
    color: #fff;
    display: flex;
    display: -webkit-box;
    flex-flow: row nowrap;
    justify-content: flex-start;
}

.form-content form {
    display: block;
    width: 100%;
    height: 100%;
}

.flex-inner {
    width: 100%;
    height: 100%;
    display: flex;
    display: -webkit-box;
    flex-flow: row nowrap;
    justify-content: flex-start;
    flex: 1;
}

.form-block {
    width: auto;
    height: 60rpx;
    margin: 20rpx 24rpx 0 4rpx;
}

.we-chat-box {
    background-color: #f5f5f5;
    height: 60rpx;
    line-height: 60rpx;
    color: #333;
    font-size: 28rpx;
    border-radius: 120rpx;
    width: 55%;
    margin-top: 20rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.chooseimg {
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx 24rpx 0;
}

.img-block {
    flex-wrap: wrap;
}

.img-block image {
    width: 150rpx;
    height: 150rpx;
    margin-right: 12rpx;
    margin-top: 12rpx;
}

.submit {
    line-height: 2;
    background-color: #bbb;
    color: #eee;
}

.submit.active {
    background-color: #e4b525;
}

.hid {
    width: 100%;
    height: 50%;
    display: none;
}

.reward-icon {
    display: block;
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx 10rpx 0;
}
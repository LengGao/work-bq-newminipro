<!--commons/wxShare/index.wxml-->
<view class="share-container " wx:if="{{isShow}}">
    <view class="share-btns">
      <button open-type="share">
        <image src="../../imgs/icon-wx.png"></image>
        <text>微信好友</text>
      </button>
      <button bindtap="handlePoster">
        <image src="../../imgs/icon-poster.png"></image>
        <text>专属海报</text>
      </button>
    </view>
    <button class="share-cancel" bindtap="handleCancel">
      取消分享
    </button>
</view>
<view class="share-mask" wx:if="{{isShow}}" bindtap="handleCancel"></view>

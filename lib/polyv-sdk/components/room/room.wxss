/* miniprogram/pages/room/room.wxss */
.page-room {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.page-room.vertical {
  width: 100vw;
  height: 100vh;
}

.tip-toast {
  position: absolute;
  top: 40vh;
  width: 70vw;
  left: 15vw;
  border-radius: 12rpx;
  height: 20vh;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tip-toast view {
  padding: 20rpx 0;
  font-size: 32rpx;
}

.plv-rtc-bg-mask {
  z-index: 1;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.8) 0%, rgba(53, 76, 87, 0.8) 100%);
}

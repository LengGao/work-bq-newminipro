.evaluation-title {
    align-items: center;
    background: #fff;
    overflow: hidden;
    height: 88rpx;
    padding: 0 30rpx;
    font-size: 32rpx;
    font-weight: 600;
    box-sizing: border-box;
    padding-top: 30rpx;
    display: none;
}

.comment-list {
    padding: 0 30rpx;
    box-sizing: border-box;
    background: #fff;
    overflow: hidden;
}

.comment-item {
    border-top: 1px solid #fafafa;
}

.comment-item .user-info {
    align-items: center;
    margin-top: 30rpx;
}

.comment-item .avatar {
    align-items: center;
    width: calc(100% - 150rpx);
}

.comment-item .avatar image {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
    margin-right: 20rpx;
}

.comment-item .date {
    font-size: 24rpx;
    color: #999;
}

.comment-item .avatar text {
    display: block;
    width: calc(100% - 82rpx);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    color: #666;
}

.comment-item .comment-words {
    line-height: 150%;
    margin: 16rpx 0 12rpx;
    color: #333;
}

.act-arr {
    display: block;
    width: 14rpx;
}

.weui-cells {
    position: relative;
}

.weui-cell {
    padding: 14rpx 0 30rpx;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

.weui-cell__bd {
    width: 100%;
}

.weui-uploader__files {
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    width: 100%;
}

.weui-uploader__file {
    width: 25%;
    padding: 0 6rpx;
    box-sizing: border-box;
    height: 160rpx;
    margin-bottom: 12rpx;
}

.weui-uploader__img {
    display: block;
    width: 100%;
    height: 100%;
}
page {
    background: #fff;
}

.ic-share {
    width: 88rpx;
    height: 88rpx;
    border-radius: 100%;
    box-shadow: 0px 3px 9px 0px rgba(119,187,255,0.4);
    position: fixed;
    right: 30rpx;
    bottom: 180rpx;
    z-index: 100;
}

.ic-share image {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.chapter-list {
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    padding: 0 40rpx;
    box-sizing: border-box;
    border-top: 1px solid #eee;
}

.chapter-list .chapter-item {
    width: 47%;
    position: relative;
    height: 420rpx;
    border-radius: 10rpx;
    background-color: rgb(255,255,255);
    box-shadow: 0px 3px 8px 0px rgba(230,230,230,0.4);
    margin: 20rpx 0;
}

.chapter-list .chapter-item:nth-child(odd) {
    margin-right: 6%;
}

.chapter-item .t-icon {
    width: 100%;
}

.chapter-item .title {
    display: block;
    /* margin-top: 12rpx; */
    margin-top: 40rpx;
    padding: 0 12rpx;
    text-align: center;
    overflow: hidden;
    white-space: pre-wrap;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    word-break: break-all;
}

.chapter-item .test-btn {
    width: 168rpx;
    height: 60rpx;
    color: #fff;
    background: #47c88a;
    font-size: 28rpx;
    text-align: center;
    line-height: 60rpx;
    border-radius: 4rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 60rpx;
}
<view class="catalogue fix-out-box {{tabArr.curBdIndex == '0'?'tactive':''}}">
    <block wx:key="index" wx:for="{{chapter}}" wx:key="index">
        <view class="cata-title">{{item.charper}}</view>
        <view class="cata-list">
            <view class="history-wrapper" data-key="index" wx:for="{{item.list}}" wx:for-item="vitem" wx:key="index">
                <view class="history-content">
                    <view style="display:flex">
                        <text class="history-name">{{vitem.name}}</text>
                    </view>
                    <view style="display:flex;margin-top:11rpx">
                        <view style="display:flex">
                             <text class="cata-name2">正确率：</text>
                            <text class="cata-name2">{{vitem.rate}}</text>
                        </view>
                        <view style="display:flex">
                             <text class="cata-name2">用时：</text>
                            <text class="cata-name3 ">{{vitem.time}}</text>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </block>
</view>
<!-- pages/virTest/virTest.wxml -->
<view class="topImage-vir">
    <navigator url="{{ nodeUrl }}?courseId={{ nondeID }}&noneTest=1" hover-class="none">
        <image src="https://minproimg.oss-cn-hangzhou.aliyuncs.com/images/monikaoshi.jpg" style="width:690rpx;height:320rpx;margin-left:30rpx;margin-top:30rpx;border-radius:20rpx;" />
    </navigator>
</view>
<view style="font-size:32rpx;font-family:PingFang SC;font-weight:bold;color:rgba(25,159,255,1);margin-left:30rpx;margin-top:64rpx;">
    模拟考试历史记录
</view>
<view style="margin-top:35rpx;" wx:if="{{ datas  }}">
        <navigator url="../virStart/virStart?courseId={{item.courseId}}&chapterId={{item.courseId}}" hover-class="none" class="vir-top-wrapper" wx:for="{{ history }}" wx:key="index" style="position:relative">
            <image style="width:26rpx;height:26rpx;margin-top:10rpx" mode="widthFix" src="https://minproimg.oss-cn-hangzhou.aliyuncs.com/images/kaoshi.png" />
            <view style="margin-left:10rpx;display:flex;flex-direction:column;justify-content:space-between">
                <view style="font-size:32rpx;font-family:PingFang SC;font-weight:500;color:rgba(102,102,102,1)">
                    {{ item.courseName }}
                </view>
                <view style="display:flex;margin-top:11rpx">
                    <view style="font-size:24rpx;font-family:PingFang-SC-Medium;font-weight:500;color:#cccccc;">
                        {{ item.updateTime }}
                    </view>
                    <view style="font-size:24rpx;font-family:PingFang-SC-Medium;font-weight:500;color:#cccccc;margin-left:30rpx;margin-right:15rpx">
                        得分:
                    </view>
                    <view style="font-size:24rpx;font-family:PingFang-SC-Medium;font-weight:500;color:#199FFF;">
                        {{ item.grossScore }}
                    </view>
                </view>
            </view>
            <text id="gl1"></text>
        </navigator>
</view>
<view style="width:750rpx;120rpx;display:flex;justify-content:center;align-items:center;margin-top:85rpx;display:flex;flex-direction: column;" wx:else="{{ datas  }}">
    <image mode="widthFix" src="https://minproimg.oss-cn-hangzhou.aliyuncs.com/images/zanwujilv.png" style="width:120rpx;height:120rpx" />
    <text style="font-size:32rpx;font-family:PingFang SC;font-weight:500;color:rgba(221,221,221,1);margin-top:39rpx">
        暂无记录
    </text>
</view>
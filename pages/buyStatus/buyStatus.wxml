<view class="fenlei-menu">
    <text bindtap="tabFun" class="teamnum {{tabArr.curHdIndex == item.id ?'thismenu com_color com_after':''}}" data-key="{{item}}" wx:for="{{topSelect}}" wx:key='index' data-id="{{item.id}}">
        {{item.name}}
    </text>
</view>
<view class="catalogue fix-out-box {{tabArr.curBdIndex == '2'?'tactive':''}}">
    <block  wx:if="{{ nodata }}">
        <view class="cata-list" wx:for="{{ collectionList }}" wx:key="index">
            <view style="display:flex;justify-content:space-between;">
                <view style="display:flex;align-items:center">
                    <view style="width:3rpx;height:26rpx;background:rgba(25,159,255,1);"></view>
                    <view style="display:flex;margin-left:10rpx;align-items:center">
                        <view style="font-size:24rpx;font-family:PingFang SC;font-weight:500;color:rgba(153,153,153,1);">
                            订单编号：
                        </view>
                        <view style="font-size:24rpx;font-family:PingFang SC;font-weight:500;color:rgba(153,153,153,1);">
                            {{ item.orderNo }}
                        </view>
                    </view>
                </view>
                <view style="font-size:24rpx;font-family:PingFang SC;font-weight:500;color:rgba(255,103,49,1);">
                    {{ item.state == '1' ?'待付款' : item.state == '2' ? '已付款' : item.state =='3' ?'已取消' : item.state == '4' ? '已退费' : '未知订单' }}
                </view>
            </view>
            <view class="myCourse-content">
                <view class="img-myCourse">
                    <image style="width:100%;height:100%" src="{{ item.picture }}" />
                </view>
                <view class="myCourse-info">
                    <view class="myCourse-content-title">{{ item.CourseName}}</view>
                    <view  > 
                        <text class="myCourse-name" style="display:none">会计</text>
                        <text class="myCourse-time">{{ item.lesson }}课时</text>
                        <text class="myCourse-times">{{ item.learnNumber }}人已学习</text>
                    </view>
                    <view class="myCourse-info-bottom" >
                        <view class="personal-infor">
                            <image mode="widthFix" class="personal-img-myCourse" src="{{ item.teacherImg ==null?'https://minproimg.oss-cn-hangzhou.aliyuncs.com/images/avatar-def%402x.png': item.teacherImg}}" binderror="errorFunction"></image>
                            <text class="personal-name">{{ item.teacherName == null?'未知': item.teacherName }}</text>
                        </view>
                        <text class="havelearn">￥{{item.amount}}</text>
                    </view>
                </view>
                 
            </view>
            <view style="display:flex;justify-content:flex-end;margin-top:30rpx">
                        <view style="width:170rpx;height:50rpx;border:1rpx solid rgba(204,204,204,1);border-radius:25rpx;font-size:24rpx;font-family:PingFang SC;font-weight:500;color:rgba(102,102,102,1);display:flex;justify-content:center;align-items:center" wx:if="{{ item.state == '1'?true:false }}" catchtap="cancleData" data-id='{{ item.orderId }}'>取消订单</view>
                        <view style="width:170rpx;height:50rpx;border:1rpx solid rgba(255,103,49,1);border-radius:25rpx;font-size:24rpx;font-family:PingFang SC;font-weight:500;color:#FF6731;display:flex;justify-content:center;align-items:center;margin-left:20rpx" wx:if="{{ item.state == '1'?true:false }}">付款</view>
            </view>
        </view>
    </block>
    <block wx:if="{{ !nodata }}">
        <view style="position:absolute;left:50%;top:45%;transform:translate(-50%,-50%);display:flex;flex-direction:column;align-items:center">
            <image style="width:280rpx;height:264rpx;" src="https://minproimg.oss-cn-hangzhou.aliyuncs.com/images/kongdata.png"/>
            <text style="font-size:32rpx;font-family:PingFang SC;font-weight:500;color:rgba(153,153,153,1);">暂无数据</text>
        </view> 
    </block>
</view>

page {
    background: #fff;
}

.avatar-box {
    width: 100%;
    height: 220rpx;
    align-items: center;
    padding: 0 30rpx;
    box-sizing: border-box;
    border-bottom: 8rpx solid #eee;
}

.my-avatar {
    width: 130rpx;
    height: 130rpx;
    margin-right: 30rpx;
    border-radius: 100%;
    box-shadow: 0px 3px 6px 0px rgba(229,229,229,0.4);
}

.my-avatar image {
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.my-info {
    height: 100%;
    width: calc(100% - 160rpx);
    align-items: center;
    font-size: 34rpx;
    position: relative;
}

.my-info .arrow {
    display: block;
    width: 16rpx;
}

.inner-box {
    height: 100%;
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
}

.inner-box text {
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.inner-box .my-name {
    font-size: 34rpx;
    margin-bottom: 8rpx;
}

.inner-box .other-info {
    font-size: 26rpx;
    color: #999;
}

.buy-vip {
    background: #00d400;
    width: 134rpx;
    height: 54rpx;
    border-radius: 40rpx 0 0 40rpx;
    position: absolute;
    right: -30rpx;
    top: 50%;
    transform: translateY(-50%);
    color: #fff;
    font-size: 24rpx;
    align-items: center;
    background-color: rgb(0,212,0);
    box-shadow: 0px 3px 6px 0px rgba(177,251,177,0.4);
}

.buy-vip image {
    display: inline-block;
    width: 24rpx;
    margin-right: 4rpx;
}

.module {
    overflow: hidden;
}

.title {
    font-size: 32rpx;
    padding: 28rpx 0 12rpx 30rpx;
    box-sizing: border-box;
}

.list-item {
    width: 33.33%;
    height: 160rpx;
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: center;
}

.list-item image {
    display: block;
    width: 70rpx;
    height: 70rpx;
}

.list-item text {
    font-size: 28rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-top: 10rpx;
    color: #4d4d4d;
}

.function-list {
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
}

.border-top {
    border-top: 8rpx solid #eee;
}
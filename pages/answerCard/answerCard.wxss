/* pages/answerCard/answerCard.wxss */
page{
    background: #FFFFFF;
}
.topTitle{
    width: 670rpx;
    padding: 35rpx  0 35rpx 0 ;
    border-bottom: 1rpx solid  #DDDDDD;
    display: flex ;
    justify-content: space-between;
    margin-left: 40rpx;
}
.topTitle view {
  display: flex;
  align-items: center;
}
.top-wrapper-pri{
    height: 40rpx;
    margin-top: 40rpx;
    display: flex;
    align-items: center;
    margin-left:40rpx ;
}
.top-wrapper-fenge{
    width:4rpx;
    height:32rpx;
    background:rgba(25,159,255,1);
    margin-right: 15rpx;
    margin-top: 10rpx;
}
.top-wrapper-title{
    width: auto;
    height: 35rpx;
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(153,153,153,1);
    text-align: center;
    vertical-align: middle;
}
.wrapper-single-option{
    margin-left: 75rpx;
    margin-right: 75rpx;
    width:600rpx;
    display: grid;
    grid-column-gap:50rpx;
    grid-template-columns: repeat(5,80rpx);
    flex-wrap:wrap;
    justify-content: flex-start;
    align-items: flex-start;
    
}
.defaultOption{
    width:80rpx;
    height:80rpx;
    background:#cecece;
    border-radius:50%;
    display: flex;
    justify-content: center;
    align-items: center;

    margin-top:40rpx ;
    color: #fff;
}
.tabbottom{
    display:flex;
    align-items: center;
    justify-content: space-around;
    width: 100%;
    height: 100%;
    height: 98rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    box-shadow:0px -1px 0px 0px rgba(238,238,238,1);
    background: #fff;
}
.checkAllAn{
    width:300rpx;
    height:60rpx;
    border:1rpx solid rgba(25,159,255,1);
    border-radius:10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(25,159,255,1);
}
.goPri{
    width:300rpx;
    height:60rpx;
    background:rgba(25,159,255,1);
    border-radius:10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);
}
.right{
    background:rgba(89,210,52,1);
}
.false{
    background:rgba(255,75,75,1);
}
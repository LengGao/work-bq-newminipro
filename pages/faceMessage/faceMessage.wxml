<view class="faceMessage">
<!--日历-->
<view class="calendar_box">
<calendar   calendarConfig="{{calendarConfig}}"
  bind:onTapDay="onTapDay"
   bind:afterTapDay="afterTapDay"
    bind:whenChangeWeek="whenChangeWeek"
  bind:whenChangeMonth="whenChangeMonth"
  bind:afterCalendarRender="afterCalendarRender"/>
</view>
<!--预约列表-->
<view class="{{calendarShow ?'message-main2':'message-main'}}">
<!--下拉-->
 <view class="dropdown" bindtap="dropdown"> 
<text id="{{calendarShow ?'gl2':'gl1'}}"></text> 
</view>
<view class="noface" hidden="{{courseInfor.length>0?true:false}}">
<image src="../../imgs/noface.png" style="width:290rpx;height:290rpx"></image>
<view class="noface_text">暂无面授课安排</view>
</view>
<view  wx:for="{{courseInfor}}" wx:key="id" style="margin:10rpx 30rpx 30rpx 30rpx">
<!--面授课列表--->
<view class="card" bindtap="tofaceDetail" data-courseId="{{item.id}}" data-datetime="{{item.timeInfo}}" data-updateThisId="{{item.updateThisId}}" >
<view style="width:630rpx;height:50rpx;border-bottom:2rpx solid #F5F5F5">
<view class="card_head">{{item.classroomName}}</view>
</view>

<view class="card_content" >
<view class="card_line">
    <view class="line_title">课程内容</view>
      <view class="line_content">{{item.chapterName}}</view>
</view>
<view class="card_line">
    <view class="line_title">课程时间</view>
      <view>{{item.timeInfo}}</view>
</view>
<view class="card_line">
    <view class="line_title">上课老师</view>
      <view> {{item.teacherName}}</view>
</view>
<view class="card_line">
    <view class="line_title">上课地点</view>
      <view>{{item.address}}</view>
</view>
<view class="card_line flexbox">
    <view style="display:flex">
     <view class="line_title">报名人数</view>
      <view>{{item.intoNum}} </view>人   
    </view>
    <view class="{{item.hasSubscribed==1?'courseStatus':'courseStatus2'}}">{{item.hasSubscribed==1?'已预约':'我要预约'}}</view>
      
</view>
</view>
</view>

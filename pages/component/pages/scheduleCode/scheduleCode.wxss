page {
  background: #fff;
}

.detail_head {
  padding: 0 30rpx !important;
  display: flex;
  background: #fff;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.detail-h1 {
  font-size: 32rpx;
  /* padding-bottom: 18rpx; */
  font-weight: bold;
}

.detail_main {
  padding: 0 30rpx 0 29rpx;
  margin-top: 20rpx;
  background: #fff;
}

.detail_course {
  display: flex;
  padding: 37rpx 0 37rpx 0;
  border-bottom: 1px solid #eeeeee;
  justify-content: space-between;
}

.detail_area {
  font-size: 28rpx;
  font-weight: 400;
  font-family: PingFang SC;
  color: #999999;
}

.detail_content {
  max-width: 498rpx;
  font-size: 28rpx;
  font-weight: 400;
  font-family: PingFang SC;
  color: #333333;
}

.code {

  background: #fff;
  width: 100%;
  height: 382rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}

.code .code_img {
  width: 220rpx;
  height: 220rpx;
  position: relative;

}

.code_img image {
  width: 100%;
  height: 100%;
}

.sign {
  position: absolute;
  top: 79rpx;
  left: 63rpx;
  font-size: 50rpx;
  font-weight: 500;
  color: #fff;
}

.main-card {
  margin: 0 45rpx;
  padding-top: 60rpx;
  box-shadow: 0px 0px 12px 0px rgba(163, 217, 255, 0.4);
  border-radius: 20px;
  position: relative;
  background: #fff;
  top:-171rpx;
  border-radius: 20rpx;
}
<import src="../../../../wxParse/wxParse.wxml"></import>
<view class="text-top flex-be">
    <view class="left-side flex-be">
        <text class="time-count">{{countDown}}</text>
        <view bindtap="showcardpop" class="fu-icon">
            <image class="test_imgs" src="../../images/ic-answer-card.png"></image>
        </view>
    </view>
    <view class="left-side flex-be">
        <button bindtap="isSubmitPaper" class="hand-in com_bgcolor" hoverClass="none">交卷</button>
    </view>
</view>
<view style="height:100rpx;"></view>
<view class="share-pop" wx:if="{{pusher}}">
    <button openType="share">
        <view class="pop-item flex-st">
            <image mode="widthFix" src="../../images/share-to.png"></image>
            <text>分享</text>
        </view>
    </button>
    <view bindtap="collect" class="pop-item flex-st">
        <image mode="widthFix" src="../../images/ic-like000.png" wx:if="{{is_collect==false}}"></image>
        <image mode="widthFix" src="../../images/ic-like111.png" wx:if="{{is_collect==true}}"></image>
        <text>收藏</text>
    </view>
</view>

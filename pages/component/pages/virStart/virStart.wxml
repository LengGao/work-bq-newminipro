<view class="title" hidden="{{ ProblemType == '6'?true:false }}">
    <view class="marks">
        {{ ProblemType == '1'?'单选题':ProblemType =='2'?'多选题':ProblemType =='3'?'判断题':ProblemType =='4'?'填空题':ProblemType =='5'?'简答题':ProblemType =='6'?'场景题':'' }}

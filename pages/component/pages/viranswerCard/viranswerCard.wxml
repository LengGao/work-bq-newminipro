<!-- pages/answerCard/answerCard.wxml -->
<view class="topTitle">
    <view>
        <view style="width:32rpx;height:32rpx;background:rgba(89,210,52,1);border-radius:50%;margin-right: 16rpx;margin-left:10rpx"></view>
        <view style="font-size:32rpx;font-family:PingFang SC;font-weight:500;color:rgba(51,51,51,1);">
            已回答
        </view>
    </view>
    <view>
        <view style="width:32rpx;height:32rpx;background:#DDDDDD;border-radius:50%;margin-right: 16rpx;"></view>
        <view style="font-size:32rpx;font-family:PingFang SC;font-weight:500;color:rgba(51,51,51,1);margin-right:10rpx">
            未回答
        </view>
    </view>
</view>
<view class="top-wrapper-pri" wx:if="{{ singleNum.length }}">
    <text class="top-wrapper-fenge"></text>
    <text class="top-wrapper-title">单选题</text>
</view>
<view class="wrapper-single-option">
    <view wx:for="{{ singleNum }}" wx:key="index" class=" {{ successOPtion }} {{ item.correct == '1' ? 'right': item.correct == '0' ? 'right':''}}"  catchtap="gobefor"  data-index='{{ index }}'>
        <text > {{index+1}} </text>
    </view>
</view>
<view class="top-wrapper-pri" wx:if="{{ multipleNum.length }}">
    <text class="top-wrapper-fenge"></text>
    <text class="top-wrapper-title">多选题</text>
</view>
<view class="wrapper-single-option">
    <view wx:for="{{ multipleNum }}" wx:key="index" class=" {{ successOPtion }} {{ item.correct == '1' ? 'right': item.correct == '0' ? 'right':''}} "  catchtap="gobefor"  data-index='{{ index }}'>
        <text > {{index+1}} </text>
    </view>
</view>
<view class="top-wrapper-pri" wx:if="{{ judgmentNum.length }}">
    <text class="top-wrapper-fenge"></text>
    <text class="top-wrapper-title">判断题</text>
</view>
<view class="wrapper-single-option" style="padding-bottom:110rpx">
    <view wx:for="{{ judgmentNum }}" wx:key="index" class=" {{ successOPtion }} {{ item.correct == '1' ? 'right': item.correct == '0' ? 'right ':''}} "  catchtap="gobefor"  data-index='{{ index }}'>
        <text > {{index+1}} </text>
    </view>
</view>
<view class="tabbottom">
    <!-- <view class="checkAllAn" >查看全部解析</view> -->
    <view class="goPri" bindtap='goToTest'>继续刷题</view>
</view>

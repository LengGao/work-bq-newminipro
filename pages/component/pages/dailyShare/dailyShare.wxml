<!-- pages/dailyShare/dailyShare.wxml -->
<view style="height:{{ height }}px; display: flex;flex-direction: column;justify-content: center;">
  <view class="pages">
    <image style="width:100%;height:100%;;position:absolute;top:0;left:0;z-index:-1" src="{{previewData.bg_img}}" mode="widthFix" />
    <image style="width:88rpx;height:88rpx;;position:absolute;bottom:212rpx;left:82rpx;z-index:1;border-radius:50%;" src="{{previewData.mini_img}}" mode="widthFix" />
    <view style="position:absolute;bottom:190rpx;left:170rpx;z-index:1;margin-left:20rpx;">
      <view style="font-size: 31rpx;color:#333333;margin-bottom:10rpx;font-weight: 800;">
        {{previewData.nickname}}
      </view>
      <view style="font-size: 22rpx;color:#333333;width:90%">{{previewData.title}}</view>
    </view>
    <view style="display:flex;position:absolute;bottom:118rpx;left:82rpx;right:82rpx;z-index:1;justify-content:space-between;">
      <view style="font-size: 20px;font-family: PingFang SC;font-weight: 500;color: #199FFF;transform: translateX(20rpx);">
        {{previewData.correct_rate}}%
      </view>
      <view style="font-size: 20px;font-family: PingFang SC;font-weight: 500;color: #199FFF;transform: translateX(-40rpx);">
        {{previewData.num}}
      </view>
      <view style="font-size: 20px;font-family: PingFang SC;font-weight: 500;color: #199FFF;transform: translateX(-50rpx);">
        {{previewData.total_num}}
      </view>
    </view>
    <view style="width:670rpx;height:736rpx;position:absolute;top:40rpx;left:40rpx;display:none">
      <image src="https://minproimg.oss-cn-hangzhou.aliyuncs.com/images/LOGO@2x.png" style="width:240rpx;height:69rpx;position:absolute;left:40rpx;top:40rpx;z-index:13" />
      <image src="https://minproimg.oss-cn-hangzhou.aliyuncs.com/images/reqiqiu.jpg" style="width:100%;height:100%;;position:absolute;left:0;top:0;z-index:10" mode="aspectFill" />
    </view>
    <!-- <image src="{{ imgsrc }}"  class="wrapper-img"/> -->
  </view>
  <view style="display:flex;width:750rpx;height:100rpx;background:rgba(255,255,255,1);display:flex;align-items:center;justify-content:space-around">
    <button style="width:300rpx;height:60rpx;border:1px solid rgba(25,159,255,1);border-radius:30rpx;line-height:60rpx;color:#199FFF;font-size:32rpx;background:#fff" bindtap='createPunchPoster'>
      保存
    </button>
    <button style="width:300rpx;height:60rpx;background:rgba(25,159,255,1);border-radius:30rpx;line-height:60rpx;color:#FFFFFF;font-size:32rpx;" open-type="share">
      分享
    </button>
  </view>
</view>
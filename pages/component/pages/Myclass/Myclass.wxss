page {
    background: #f5f5f5;
}

.myCourse {
    width: 750rpx;
    margin: auto;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: column;
    padding: 20rpx 29rpx 27rpx 30rpx;
    background: #fff;
}

.myCourse-title {
    height: 28rpx;
    line-height: 28rpx;
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
}

.myCourse-content-title {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.img-myCourse {
    width: 230rpx;
    height: 130rpx;
}

.myCourse-content {
    display: flex;
}

.myCourse-info {
    height: 130rpx;
    width: 420rpx;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.myCourse-info-bottom {
    display: flex;
    justify-content: space-between;
}

.personal-infor {
    display: flex;
    align-items: center;
}

.personal-name {
    margin-left: 10rpx;
    font-size: 20rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
}

.personal-img-myCourse {
    width: 32rpx;
    height: 32rpx;
}

.myCourse-time {
    height: 30rpx;
    display: inline-block;
    line-height: 25rpx;
    padding: 0;
    margin-left: 5rpx;
    border-radius: 4rpx;
    font-size: 20rpx;
    font-family: 'PingFang SC';
    font-weight: 500;
    color: #999999;
}

.myCourse-btnbox {
    width: 100%;
    display: flex;
    justify-content: space-around;
    padding-top: 20rpx;
}

.myCourse-btn {
    display: inline-block;
    line-height: 32rpx;
    border-radius: 25rpx;
    padding: 2rpx 31rpx;
    font-size: 16rpx;
    border: 1rpx solid #ccc;
    justify-content: center;
    margin-left: 25rpx;
}
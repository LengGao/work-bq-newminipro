<block>
    <view class="myCourse" hidden="{{ nodata }}" wx:for="{{ myclass }}" wx:key="index" data-index="{{index}}" bindtap="toClassVideo">
        <view style="display:flex;margin-bottom:31rpx;align-items:center">
          <view style="width:6rpx;height:26rpx;background:rgba(25,159,255,1);"></view>
          <view style="font-size:24rpx;font-family:PingFang SC;font-weight:500;color:rgba(153,153,153,1);margin-left:20rpx">{{ item.add_time }}加入班级</view>
        </view>
        <view>
            <view class="myCourse-content" >
            <view class="img-myCourse">
                <image style="width:100%;height:100%" src="{{item.class_icon}}" />
            </view>
            <view class="myCourse-info">
                <view class="myCourse-content-title">{{item.classroom_name}}</view>
                <view>
                    <text class="myCourse-time">班级人数：{{item.class_user_count}} </text>
                    <text class="myCourse-time">视频数量：{{ item.class_video_count }}</text>
                </view>
                <view class="myCourse-info-bottom">
                    <view class="personal-infor">
                        <image mode="widthFix" class="personal-img-myCourse" src="{{item.teacher_url?item.teacher_url:'https://minproimg.oss-cn-hangzhou.aliyuncs.com/images/avatar-def%402x.png'}}" binderror="errorFunction"></image>
                        <text class="personal-name">{{ item.teacher_name || '--'}}</text>
                    </view>
                </view>
            </view>
          
        </view>
        </view>
   
    </view>
</block>
<block>
    <view style="width:280rpx;height:264rpx;position:absolute;left:50%;top:50%;transform:translate(-50%,-50%);display:flex;flex-direction:column;align-items:center" wx:if="{{nodata}}">
        <view style="width:280rpx;height:264rpx;">
            <image style="width:140px;height:132px" src="https://minproimg.oss-cn-hangzhou.aliyuncs.com/images/kongdata.png" />
        </view>
        <text style="font-size:32rpx;font-family:PingFang SC;font-weight:500;color:rgba(153,153,153,1);">
            暂无数据
        </text>
    </view>
</block>
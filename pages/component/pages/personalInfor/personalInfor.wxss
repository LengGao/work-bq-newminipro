/* pages/personalInfor/personalInfor.wxss */
page{
    background: #f5f5f5;
}
.question-images-area {
    padding: 27rpx 0;
  }
  .question-images-tool {
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    justify-content: flex-start;
  }
.top-server{
    display: flex;
    justify-content: center;
    align-items: center;
    
  }
  .question-images {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }
  .q-image-wrap {
    width: 100%;
    height: 100%;
  }
  
  .q-image {
    flex: 1;
    height: 100%;
    width: 100%;
  }
  .allimage{
    position: relative;
  }
 
  .allimage::before{
    content:"";
    position: absolute;
    width: 150rpx;
    height: 150rpx;
    top:-50rpx;
    left:-50rpx;
  }
  .q-image-remover {
    text-align: center;
    width: 26rpx;
    height: 26rpx;
    background:rgba(233,0,0,1);
    border-radius:50%;
    position: absolute;
    right: -10rpx;
    top: -10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    /* position: relative; */
  }
  .q-image-remover::before{
    content:"";
    position: absolute;
    width: 150rpx;
    height: 150rpx;
    top:-10rpx;
    left:-10rpx;
    bottom:-10rpx;
    right:-10rpx;
  }
  .submitContent{
    margin-top: 60rpx;
    margin-left: 125rpx;
    width:500rpx;
    height:80rpx;
    background:rgb(68, 146, 235);
    border-radius:40rpx;
    font-size:36rpx;
    font-family:'PingFang SC';
    font-weight:500;
    color:rgba(255,255,255,1);
    line-height: 80rpx;
    text-align: center;
  }
  .i-input{
    padding: 27rpx 30rpx;
  }
  .i-cell {
      padding: 0;
  }
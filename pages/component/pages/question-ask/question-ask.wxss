  .weui-cells{
    margin-top: 32rpx;
  }
  .question-images-area {
    padding: 40rpx 0;
  }
  
  .question-images-tool {
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    justify-content: flex-start;
  
  }
  .top-server{
    display: flex;
    justify-content: center;
    align-items: center;
    
  }
  .question-images {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 30rpx;
   
  }
  
  .q-image-wrap {
    width: 190rpx;
    height: 190rpx;
    margin-right: 30rpx;
  }
  
  .q-image {
    flex: 1;
    height: 100%;
    width: 100%;
  }
  
  .q-image-remover {
    text-align: center;
  }
  .submitContent{
    margin-top: 100rpx;
    margin-left: 85rpx;
    width:500rpx;
    height:80rpx;
    background:rgba(25,159,255,1);
    border-radius:40rpx;
    font-size:36rpx;
    font-family:'PingFang SC';
    font-weight:500;
    color:rgba(255,255,255,1);
    line-height: 80rpx;
    text-align: center;
  }
  
  
page {
    background: #fff;
  }
  .header{
    font-size:28rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(51,51,51,1);
  }
  .header2{
    font-size:28rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(51,51,51,1);
    margin-top: 40rpx;
  }
  .question-form {
    margin: 41rpx 40rpx 0rpx 40rpx;
  }
  
  .question-input-area {
    background-color: #fff;
    border: 1rpx solid #f2f2f2;
    border-radius: 4rpx;
  }
  
  .question-title-wrap {
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #ccc;
    margin: 10rpx 30rpx;
    padding: 20rpx 0;
  }
  .weui-cell__bd{
    border:2rpx solid rgba(238,238,238,1);
  }
  .question-title {
    flex: 1;
  }
  
  .weui-textarea-counter {
    color: #b3b3b3;
    font-size: 14px;
    padding-left: 10rpx;
    text-align: right;
  
  }
  .weui-textarea{
    margin: 0 ;
    padding: 0 ;
  }

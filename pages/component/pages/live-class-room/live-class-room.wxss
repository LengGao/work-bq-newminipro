page {
    height: 100%;
    background: rgba(68, 67, 79);
  }
  .tag
  {
    border-bottom:1px solid #fff
  }
  .plv-mp-demo-ppt-page {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }
  
  .plv-mp-demo-movable {
    width: 100%;
    flex: 1;
    position: relative;
  }
  
  .plv-mp-demo-chatroom {
    height: 100%;
    overflow: hidden;
  }
  
  .plv-mp-demo-player-wrap {
    position: absolute;
    top: 0;
    left: 0;
    width: 200px;
    height: 200px;
    z-index: 99999;
  }
  
  .plv-mp-watch-answer-card {
    display: none;
  }
  
  .show {
    display: block;
  }
  .price-menu {
    display: flex;
    flex-flow: row wrap;
    justify-content: flex-start;
    background-color: rgba(69, 67, 80);
    box-shadow: 0 4rpx 4rpx rgba(55, 53, 66);
    width: 100%;
    color:#fff;
    /* position: fixed; */
    left: 0;
    top: 420rpx;
    z-index: 20;
}

.menu-item {
    flex: 1;
    text-align: center;
    height: 84rpx;
    line-height: 84rpx;
    font-size: 32rpx;
    position: relative;
}

.priceactive {
    color: #1bcc14;
    box-sizing: border-box;
}

.price-menu .priceactive::after {
    content: '';
    display: block;
    width: 80rpx;
    height: 4rpx;
    border-radius: 60rpx;
    background: #1bcc14;
    position: absolute;
    bottom: 2rpx;
    left: 50%;
    transform: translateX(-50%);
}
.fix-out-box {
  display: none;
  background: #FFFEFF;
}

.fix-out-box.tactive {
  display: block;
}
  
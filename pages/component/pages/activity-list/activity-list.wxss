.activity-list {
    background: #fff;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    overflow: hidden;
    margin-bottom: 20rpx;
}

.img-act {
    width: 100%;
    height: 330rpx;
}

.name {
    display: block;
    font-size: 32rpx;
    margin-top: 10rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.time {
    display: block;
    font-size: 24rpx;
    color: #999;
    margin: 12rpx 0;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
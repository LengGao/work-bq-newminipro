/**index.wxss**/

page {
    background: #4284f5;
}

ec-canvas {
    width: 500rpx;
    height: 429rpx;
}

.wrapper-top-content {
    display: flex;
    justify-content: space-around;
}

.wrapper-data-name {
    font-size: 50rpx;
    font-family: PingFang SC;
    font-weight: Medium;
    color: #199FFF;
}

.wrapper-data-title {
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: Medium;
    color: #333333;
}

.wrapper-data-every {
    display: flex;
    flex-direction: column;
    align-items: center;
}

#mychart-dom-move-bar {
    width: 100%;
    height: 100%;
    border: 1px solid red;
    display: block;
}



#gl1 {
    text-align: center;
    width: 25rpx;
    height: 25rpx;
    position: absolute;
    top: 50%;
    border-left: 4rpx solid #FFFFFF;
    border-bottom: 4rpx solid #FFFFFF;
    -webkit-transform: translate(0, -50%) rotate(-135deg);
    transform: translate(0, -50%) rotate(45deg);
}
#gl1::before {
    content: "";
    position: absolute;
    top: -20rpx;
    left: -20rpx;
    bottom: -20rpx;
    right: -20rpx;
}
.cover_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 100000;
    color: #fff;
}
.buy_box {
    width: 100%;
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 200000;
    background: #fff;
    padding: 20rpx;
    overflow: hidden;
    display: flex;
}

.buy_box .title {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #333;
    padding: 20rpx 0;
}

.buy_box .num {
    font-size: 28rpx;
    color: #333;
    padding: 40rpx 0;
}

.buy_box .num .set {
    display: inline-block;
    height: 40rpx;
    width: 60rpx;
    text-align: center;
    line-height: 40rpx;
    border: 1px solid #444;
    margin-right: 2rpx;
    border-radius: 8rpx;
}
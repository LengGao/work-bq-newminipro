page{
    height: 100%;
}
#video{
    width: 100%;
    height: 100%;
    position: relative;
}
.video-control{
    position: absolute;
    right: 0;
    bottom: 90rpx;
    color: #fff;
    font-size: 24rpx;
    padding-right: 8rpx;
   }
   .video-control cover-view{
       padding: 20rpx;
   }
   .video-control-panel{
       float: right;
       width: 200rpx;
       height: 100%;
       background-color: rgba(0,0,0,0.6);
       display: flex;
       justify-content: center;
       flex-direction: column;
       transform: translateX(200rpx);
       position: relative;
       z-index: 1;
   }
   
   .video-control-panel .panel-item{
       color: #fff;
       text-align: center;
       padding: 20rpx 12rpx;
       font-size: 24rpx;
   }
   .video-control-panel .panel-item.actived{
    color: #199fff;
    }
page {
  height: 100%;
}
.video-box {
  width: 100%;
  height: 420rpx;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 20;
  background: #000;
}

.plv-mp-demo-ppt-page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.plv-mp-demo-movable {
  width: 100%;
  flex: 1;
  position: relative;
}

.plv-mp-demo-chatroom {
  height: 100%;
  overflow: hidden;
}

.plv-mp-demo-player-wrap {
  position: absolute;
  top: 0;
  left: 0;
  width: 200px;
  height: 200px;
  z-index: 99999;
}

.plv-mp-watch-answer-card {
  display: none;
}

.show {
  display: block;
}

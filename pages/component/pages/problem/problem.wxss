/* pages/problem/problem.wxss */
page{
    background:#FFFFFF;
    padding-left: 30rpx;
    padding-right:30rpx
}
.top-container{
    width: 690rpx;
    height: 320rpx;
    border-radius:20rpx;
    margin-top: 31rpx;
}
.top-wrapper{
    width: 100%;
    height: 100%;
    
}
.title{
    font-size:36rpx;
    font-family:PingFang SC;
    font-weight:bold;
    color:rgba(51,51,51,1);
    margin-top: 28rpx;
    display: block;
    margin-bottom: 28rpx;
}
.everyPro{
    width: 100%;
    height: 100rpx;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid  rgba(238,238,238,1);
}
.proText{
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:#666666;
}
.totalPro{
  
    display: flex;
    flex-direction: column;

}
#gl2{
    text-align: center;
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    top: 50%;
    right: 14rpx;
    border-left: 2rpx solid #CCCCCC;
    border-bottom: 2rpx solid #CCCCCC;
    -webkit-transform: translate(0,-50%) rotate(-135deg);
    transform: translate(0,-50%) rotate(-135deg);
}
.fankui{
    width: 500rpx;
    height: 80rpx;
    border:2rpx solid rgba(25,159,255,1);
    border-radius:40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color:rgba(25,159,255,1);
    font-family:'PingFang SC';
    font-weight:500;
    font-size:36rpx;
    margin-left: 95rpx;
    margin-top: 200rpx;
}
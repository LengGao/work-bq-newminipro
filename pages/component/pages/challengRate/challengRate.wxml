<view style="position:fixed;bottom:0;left:0;width:750rpx;height:120rpx;background:rgba(255,255,255,1);box-shadow:0px -1px 0px 0px rgba(238,238,238,1);display:flex">
    <view style="font-size:32rpx;font-family:PingFang SC;font-weight:bold;color:rgba(25,159,255,1);width:64rpx;height:70rpx;margin-top:20rpx;margin-left:44rpx">
        我的成绩
    </view>
    <image src="{{userInfo.user_img}}" style="width:80rpx;height:80rpx;margin-left:42rpx;margin-top:20rpx;border-radius:50%;" />
    <view style="display:flex;margin-top:20rpx;flex-direction:column;align-items:space-between;margin-left:21rpx;overflow:hidden">
        <view style="font-size:32rpx;font-family:PingFang SC;font-weight:500;color:rgba(51,51,51,1);overflow: hidden;white-space:nowrap;text-overflow: ellipsis; ">
            {{userInfo.nickname}}
        </view>
        <view style="display:flex;margin-top:4rpx" wx:if="{{ userInfo.challenge_id }}">
            <view style="color:#999999;font-size:28rpx">
                排名:
                <text style="color:#199FFF;font-size:28rpx">{{ userInfo.rank }}</text>
            </view>
            <view style="color:#999999;font-size:28rpx;margin-left:10rpx">
                得分:
                <text style="color:#199FFF;font-size:28rpx">{{ userInfo.mark }}</text>
            </view>
        </view>
        <view style="display:flex;margin-top:4rpx"  wx:if="{{ userInfo.challenge_id ? false:true }}">
            <view style="color:#999999;font-size:28rpx">今日还没任何成绩</view>
        </view>
    </view>
    <view style="width:200rpx;height:60rpx;background:rgba(25,159,255,1);border-radius:30rpx;colorL:#FFFFFF;line-height:56rpx;text-align:center;color:#ffffff;margin-left:61rpx;margin-top:30rpx" bindtap='gochallengPri'>
        继续挑战
    </view>
</view>
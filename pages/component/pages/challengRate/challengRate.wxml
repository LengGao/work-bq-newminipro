<!-- pages/challengRate/challengRate.wxml -->
<view style="height:320rpx;width:100%;background:#199FFF;overflow:hidden;position:relative">
    <view style="display:flex;flex-direction:column;align-itens:center;margin-top:76rpx;margin-left:50rpx">
        <view style="font-size:76rpx;font-family:Source Han Sans SC;font-weight:bold;color:rgba(255,255,255,1);">
            刷题挑战榜
        </view>
        <view style="font-size:26rpx;font-family:PingFang SC;font-weight:500;color:rgba(255,255,255,1);margin-top:10rpx">
            更新时间:       {{time[0].time}}
        </view>
    </view>
    <image style="width:445rpx;height:265rpx;position:absolute;bottom:0;right:0;" src="https://minproimg.oss-cn-hangzhou.aliyuncs.com/images/tiaozhanbang.png" />
</view>
<view style="background:rgba(255,255,255,1);border-radius:20rpx 20rpx 0px 0px;padding:37rpx 57rpx 48rpx 47rpx;position:relative;top:-20rpx">
    <view class="top-wrapper-fun">
        <view wx:for="{{ names }}" wx:key="index" style="font-size:28rpx;font-family:PingFang SC;font-weight:500;color:rgba(153,153,153,1);">
               {{item.name }}
        </view>
    </view>
    <view style="display:flex;flex-direction:column;margin-bottom:60px">
        <view wx:for="{{ infos }}" wx:key="index" class="wrapper-allnumber" style="font-size:32rpx;font-family:PingFang SC;font-weight:500;color:rgba(153,153,153,1);height:120rpx">
            <view>
                <view wx:if="{{ item.rank == 1?false : item.rank == 2?false:item.rank == 3?false:true }}" style="margin-left:16rpx">{{ item.rank }}</view> 
                <image src="https://minproimg.oss-cn-hangzhou.aliyuncs.com/images/1.png" style="width:56rpx;height:56rpx;border-radius:50%" wx:if="{{ item.rank == 1? true : false }}" />
                <image src="https://minproimg.oss-cn-hangzhou.aliyuncs.com/images/2.png" style="width:56rpx;height:56rpx;border-radius:50%" wx:if="{{ item.rank == 2? true : false }}" />
                <image src="https://minproimg.oss-cn-hangzhou.aliyuncs.com/images/3.png" style="width:56rpx;height:56rpx;border-radius:50%" wx:if="{{ item.rank == 3? true : false }}" />
            </view>
            <view style="display:flex;align-items:center;height:88rpx">
                <image src="{{ item.user_img }}" style="width:80rpx;height:80rpx;border-radius:50%"/>
                <view style="margin-left:20rpx;color:#333333;font-size:32rpx;overflow:hidden;white-space:nowrap;text-overflow: ellipsis;height:33rpx;display:flex;align-items:center;height:44rpx;flex:1;margin-right:20rpx">
                    {{ item.nickname }}
                </view>
            </view>
            <view style="color:#333333;font-size:32rpx">{{ item.mark }}</view>
            <view style="color:#333333;font-size:32rpx">{{ item.use_time }}</view>
        </view>
    </view>
</view>

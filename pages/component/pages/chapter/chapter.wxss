page {
    background: #F5F5F5;
}
.chapter-list{
  width:750rpx;
  height:278rpx;
  position: relative;
}
.chapter-list>image{
    position: absolute;
    top: 0;
    left:0 ;
    z-index: -1;
}
.chapter-list-img{
    width: 100%;
    padding: 29rpx 101rpx 0 92rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.top{
    font-size:50rpx;
    font-family:PingFang SC;
    font-weight:bold;
    color:rgba(255,255,255,1);
}
.fon{
    font-size:24rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(255,255,255,1);
    margin-top: 10rpx;
}
.process{
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: -8rpx;
    justify-content: center;
}
.fenge{
    width:1rpx;
    height:68rpx;
    border:1rpx solid rgba(238,238,238,1);
}
.card{
    width:690rpx;
    height: auto;
    padding: 40rpx 30rpx 40rpx 30rpx;
    margin-left: 30rpx;
    position: relative;
    top: -127rpx;
    border: 1px solid #cecece;
    background:rgba(255,255,255,1);
    box-shadow:0rpx 0rpx 20rpx 0rpx rgba(153,153,153,0.3);
    border-radius:20rpx;
}
.rates{
    font-size:24rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:#199FFF;
}
.ratesText{
    font-size:24rpx;
    font-family: 'PingFang-SC-Medium';
    font-weight:500;
    color:#CCCCCC;
}
.wrapper-class{
    display: flex;
    padding-top:15rpx;
    padding-bottom: 15rpx;
    border-bottom: 1rpx solid rgba(245,245,245,1);
    position: relative;
}
.wrapper-content{
    display: flex;
    flex-direction:column ;
    margin-left: 19rpx;
}
.wrapper-bottom{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-top: 5rpx;
}
.wrapper-info{
    font-size:24rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:#CCCCCC;
}
.title-card{
    font-size:32rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(102,102,102,1);
}
#gl1{
    text-align: center;
    width: 16rpx;   
    height: 16rpx;
    position: absolute;
    top: 50%;
    right: 22rpx;
    border-left: 1rpx solid rgba(204,204,204,1);
    border-bottom: 1rpx solid rgba(204,204,204,1);
    -webkit-transform: translate(0,-50%) rotate(-135deg);
    transform: translate(0,-50%) rotate(-135deg);
}
<view class="top-image-auth">
     <image mode="widthFix" src="https://minproimg.oss-cn-hangzhou.aliyuncs.com/images/LOGO.png" style="width:100%;height:100%" />
</view>
<view class="middle-image-auth">
     <image mode="widthFix" src="https://minproimg.oss-cn-hangzhou.aliyuncs.com/images/dongpeixuetang.png" style="width:100%;height:100%" />
</view>
<button bindtap="getUserProfile"  class="denglu" >微信授权</button>
<view style="font-size:28rpx;font-family:PingFang SC;font-weight:500;color:rgba(153,153,153,1);margin-top:29rpx;width:750rpx;display:flex;justify-content:center;padding:0 30rpx">需要您提供微信授权才能继续提供服务</view>
<view class="login_cover" hidden='{{isphone}}'>
    <view class="login_phone">
        <view class="login_title">微信授权</view>
        <view class="login_content_phone">
            <icon type="success" size="60" ></icon>
            <view>微信授权成功</view>
            <view class="login_content_v">授权绑定你的手机号码</view>
            <!-- <navigator url="/pages/userPhoneUpdate/userPhoneUpdate?userData={{userData}}&userDa={{userDa}}">
              <view class="login_get_phone com_color">点击绑定其他手机号码</view>
            </navigator> -->
        </view>
        <view class="login_btn_box">
            <button bindtap="cancelPhone">取消</button>
            <button class="com_color" bindgetphonenumber="getPhoneNumber" openType="getPhoneNumber">允许</button>
        </view>
    </view>
</view>
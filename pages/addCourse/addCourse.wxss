/* pages/addCourse/addCourse.wxss */
page{
  background: #f5f5f5;
}
.help {
  width: 750rpx;
  margin: 0 auto;
}
 
.help .help_item {
  margin: 20rpx auto;
}
.help .help_item:nth-child(1){
   margin: 0 auto;
}
.help .help_item .title {
  font-size: 30rpx;
  height: 120rpx;
  background: #ffffff;
  display: flex;
  position: relative;
}
 
.help .help_item .title .title_1 {
  width: 630rpx;
  height: 120rpx;
  padding-left: 20rpx;
  padding-top: 14rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color: #333333;
  display: flex;
  align-items: flex-start;
}
 
.help .help_item .title .title_2 {
  width: 50rpx;
  height: 60rpx;
  text-align: center;
}
 
.help .help_item .title .title_2 image {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx auto;
}
 
.help .help_item .detail {
  margin: 0rpx auto;
  font-size: 25rpx;
  line-height: 40rpx;
  background: #ffffff;
  border-top:1rpx solid rgba(238,238,238,1) ;
}
.up{
    text-align: center;
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    top: 50%;
    right: 30rpx;
    border-left: 1rpx solid #999999;
    border-bottom: 1rpx solid #999999;
    -webkit-transform: translate(0,-50%) rotate(-135deg);
    transform: translate(0,-50%) rotate(135deg);
}
.down{
    text-align: center;
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    top:calc(50% - 8.5rpx) ;
    right: 30rpx;
    border-left: 1rpx solid #999999;
    border-bottom: 1rpx solid #999999;
    -webkit-transform: translate(0,-50%) rotate(-135deg);
    transform: translate(0,-50%) rotate(-45deg);
}
.wrapper-items{
  width: 730rpx;
  height: 100rpx;
  margin-left: 80rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  border-bottom: 1rpx solid rgba(238,238,238,1);
  color: #666666;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.none-items{
  width: 730rpx;
  height: 100rpx;
  margin-left: 80rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  border-bottom: 1rpx solid rgba(238,238,238,1);
  display: flex;
  align-items: center;
  justify-content: flex-start;
  color: rgb(233, 151, 44);
  
}
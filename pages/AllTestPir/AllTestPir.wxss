page{
    background: #fff;
}
.myCourse{
    width: 690rpx;
    margin: auto;
    margin-top: 20rpx;
    border-radius:20rpx;
    display: flex;
    flex-direction: column;
    padding:20rpx 29rpx 27rpx 30rpx ;
}
.myCourse-title{
    height:28rpx;
    line-height: 28rpx;
    font-size:30rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(51,51,51,1);
}
.img-myCourse{
    width: 230rpx;
    height: 130rpx;
}
.myCourse-content{
    display: flex;
}
.myCourse-info{
    height: 130rpx;
    width: 420rpx;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.myCourse-info-bottom{
    display: flex;
    justify-content: space-between;
}
.personal-infor{
    display: flex;
    align-items: center;
}
.personal-name{
    margin-left: 10rpx;
    font-size:20rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(51,51,51,1);
}
.personal-img-myCourse{
    width: 32rpx;
    height: 32rpx;
}
.myCourse-time{
    height:30rpx;
    display: inline-block;
    line-height: 25rpx;
    padding: 0;
    margin-left:5rpx ;
    border-radius:4rpx;
    font-size:20rpx;
    font-family:'PingFang SC';
    font-weight:500;
    color:#999999;
}
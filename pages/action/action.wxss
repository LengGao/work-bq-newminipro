.score {
    align-items: baseline;
}

.score text:nth-child(1) {
    font-size: 74rpx;
    /* font-size: 80rpx; */
}

.score text:nth-child(2) {
    color: #666;
}

.item-name {
    /* margin: 50rpx 0 10rpx; */
    margin: 0 0 10rpx;
    text-align: center;
    color: #808080;
}

.exam-table {
    height: 120rpx;
    align-items: center;
    border-bottom: 1px solid #ddd;
}

.exam-item {
    flex: 1;
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
}

.exam-item image {
    display: block;
    width: 36rpx;
    margin-right: 12rpx;
}

.paper-content {
    padding-left: 30rpx;
    box-sizing: border-box;
}

.test-paper {
    height: 194rpx;
    align-items: center;
    border-bottom: 1px solid #ddd;
    position: relative;
}

.serial {
    display: block;
    width: 92rpx;
    font-size: 96rpx;
    font-family: 'font-exam';
}

.paper-name {
    width: calc(100% - 30rpx);
}

.paper-name text {
    display: block;
}

.paper-name .vip0 {
    background: #ffe363;
    font-size: 20rpx;
    height: 32rpx;
    line-height: 32rpx;
    text-align: center;
    width: 48rpx;
    border-radius: 2rpx;
    margin: 8rpx 0 0 6rpx;
}

.paper {
    height: 100%;
    width: calc(100% - 92rpx);
    padding-right: 30rpx;
    box-sizing: border-box;
    align-items: center;
}

.paper .link0 {
    display: block;
    width: 20rpx;
    opacity: 0.8;
}

.paper .bigger {
    font-size: 44rpx;
    color: #333;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    max-width: calc(100% -50rpx);
}

.paper .exam-info {
    margin-top: 24rpx;
    color: #999;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 26rpx;
}

.position_top {
  position: fixed;
  left: 0;
  top:0;
  background: #2798ee;
  width: 100%;
	height: 430rpx;
  z-index: -1;
  border-bottom-left-radius:50%; 
  border-bottom-right-radius:50%; 
}